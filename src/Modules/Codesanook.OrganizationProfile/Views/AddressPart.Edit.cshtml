  {
    <div asp-validation-class-for="Value.HouseNumber" class="form-group">
      <label asp-for="Value.HouseNumber">@T[nameof(Model.Value.HouseNumber)]</label>
      <input asp-for="Value.HouseNumber" class="form-control" />
      <span class="hint">@T[nameof(Model.Value.HouseNumber)]</span>
    </div>

    <div asp-validation-class-for="Value.VillageName" class="form-group">
