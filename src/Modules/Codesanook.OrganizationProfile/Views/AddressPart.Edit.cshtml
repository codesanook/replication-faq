@model ShapeViewModel<AddressPart>

<fieldset>
  <legend>@T["Address"]</legend>
  <div>
    <label asp-for="Value.ShowAddress">
      <input type="checkbox" asp-for="Value.ShowAddress" class="part-display-toggle">
      @T[nameof(Model.Value.ShowAddress)]
    </label>
  </div>

